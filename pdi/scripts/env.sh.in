# Find our parent directory, PDI_BASE
if [ -n "$ZSH_VERSION" ]; then
	PDI_BASE="$(readlink -f "$(dirname "${(%):-%x}")")"
elif [ -n "$BASH_VERSION" ]; then
	PDI_BASE="$(readlink -f "$(dirname "${BASH_SOURCE[0]}")")"
else
	echo "This script only supports Bash and Zsh. Not setting up PDI path." >&2
	return
fi

# this file in in INSTALL_PDIDATADIR relative to PDI root, go up as many directories as it contains
PDI_BASE="$(PDI_RELDATADIR="@INSTALL_PDIDATADIR@"
cd "$PDI_BASE"
while [ "$(readlink -f "/${PDI_RELDATADIR}")" != "/" ]
do
	PDI_RELDATADIR="$(dirname "${PDI_RELDATADIR}")"
	cd ..
done
pwd)"

if [ -z "$PDI_DIR" ]; then

export PDI_DIR="$PDI_BASE"

if [ -n "$PATH" ]; then
	export PATH="${PDI_DIR}/@CMAKE_INSTALL_BINDIR@/:$PATH"
else
	export PATH="${PDI_DIR}/@CMAKE_INSTALL_BINDIR@/"
fi


if [ "$(uname -s)" = "Darwin" ]; then 
	if [ -n "$DYLD_LIBRARY_PATH" ]; then
		export DYLD_LIBRARY_PATH="${PDI_DIR}/@CMAKE_INSTALL_LIBDIR@/:$DYLD_LIBRARY_PATH"
	else
		export DYLD_LIBRARY_PATH="${PDI_DIR}/@CMAKE_INSTALL_LIBDIR@/"
	fi
else 
	if [ -n "$LD_LIBRARY_PATH" ]; then
		export LD_LIBRARY_PATH="${PDI_DIR}/@CMAKE_INSTALL_LIBDIR@/:$LD_LIBRARY_PATH"
	else
		export LD_LIBRARY_PATH="${PDI_DIR}/@CMAKE_INSTALL_LIBDIR@/"
	fi
fi


if [ -n "$PYTHONPATH" ]; then
	export PYTHONPATH="${PDI_DIR}/@Python3Path_INSTALL_SITEARCHDIR@/:$PYTHONPATH"
else
	export PYTHONPATH="${PDI_DIR}/@Python3Path_INSTALL_SITEARCHDIR@/"
fi

if [ -n "$LIBRARY_PATH" ]; then
	export LIBRARY_PATH="${PDI_DIR}/@CMAKE_INSTALL_LIBDIR@/:$LIBRARY_PATH"
else
	export LIBRARY_PATH="${PDI_DIR}/@CMAKE_INSTALL_LIBDIR@/"
fi

if [ -n "$CPATH" ]; then
	export CPATH="${PDI_DIR}/@CMAKE_INSTALL_INCLUDEDIR@/:${PDI_DIR}/@INSTALL_FMODDIR@:$CPATH"
else
	export CPATH="${PDI_DIR}/@CMAKE_INSTALL_INCLUDEDIR@/:${PDI_DIR}/@INSTALL_FMODDIR@"
fi

PDI_VERSION="@PDI_VERSION@"

if [ -n "$PDI_VERBOSE_ENV" ]; then
	echo "Loading environment for PDI @PDI_VERSION@ ($PDI_DIR)" >&2
fi

elif [ "$PDI_DIR" != "$PDI_BASE" ]; then # [ -z "$PDI_DIR" ]

if [ -z "$PDI_QUIET" ]; then
	echo "Warning, different PDI Environment already set ($PDI_DIR), not overriding with $PDI_BASE" >&2
fi

fi # [ -z "$PDI_DIR" ]
