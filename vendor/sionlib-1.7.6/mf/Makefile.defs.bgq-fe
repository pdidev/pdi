#------------------------------------------------------------------------------
# SIONlib Makefile Definitions (Makefile.defs.bgq-fe)
#------------------------------------------------------------------------------

CFGKEY = bgq
CONFIG = IBM BlueGene/Q

PREFIX = $(TOPDIR)/../../install/sionlib_bgq

#------------------------------------------------------------------------------
# Platform Settings
#------------------------------------------------------------------------------
# don't let it overwrite from configure (multi-platform)
BGPREC   = 64
PREC     = ${BGPREC}  

PFLAG  =
AFLAG  =
PLAT     = generic
MACHINE  = -DMACHINE=\"IBM\ BG/Q\"
PLAT_LDIR   = -DPFORM_LDIR=\".\"
PLAT_CONF= $(MACHINE) $(PLAT_LDIR)
PLATCC   = gcc -m$(BGPREC)
LARGEFILE=-D_LARGEFILE64_SOURCE -D_FILE_OFFSET_BITS=64 -D__USE_LARGEFILE64 -D__USE_FILE_OFFSET64

#------------------------------------------------------------------------------
# SIONlib General Settings
#------------------------------------------------------------------------------
OPTFLAGS = -g -qfullpath
CC       = xlc -q$(BGPREC)
CFLAGS   = -qlanglvl=stdc99 $(OPTFLAGS) $(LARGEFILE) -qsuppress=1506-377
CXX      = xlC -q$(BGPREC)
CXXFLAGS = $(OPTFLAGS) -O3 $(LARGEFILE)
F77      = xlf -q$(BGPREC)
F90      = xlf -q$(BGPREC)
FFLAGS   = $(OPTFLAGS) 
FPP      =
FDOPT    = -WF,-D
LDFLAGS  = $(OPTFLAGS) 
UTILLIB  =

#------------------------------------------------------------------------------
# SIONlib Settings
#------------------------------------------------------------------------------

SION_PLATFORM    = -D_SION_LINUX 
ARCH             = LINUX

# Library Naming Scheme: see Makefile.defs.linux-gomp
SION_LIBNAME_COM = sioncomfe_$(BGPREC)
SION_LIBNAME_SER = sionserfe_$(BGPREC)
SION_LIBNAME_GEN = siongenfe_$(BGPREC)
SION_LIBNAME_OMP     = sionompfe_$(BGPREC)
SION_LIBNAME_MPI     = sionmpife_$(BGPREC)
SION_LIBNAME_OMPI    = sionompife_$(BGPREC)

PARUTILENABLE    = 1

FORTRANENABLE    = 1
FORTRANNAMES     = -D_FORTRANNOUNDERSCORE
SION_LIBNAME_F77_SER = sionserfe_f77_$(BGPREC)
SION_LIBNAME_F77_MPI = sionmpife_f77_$(BGPREC)
SION_LIBNAME_F90_SER = sionserfe_f90_$(BGPREC)
SION_LIBNAME_F90_MPI = sionmpife_f90_$(BGPREC)
SION_MODPATH = mod_fe$(BGPREC)

CXXENABLE            = 1
SION_LIBNAME_CXX_SER = sionserfe_cxx_$(BGPREC)
SION_LIBNAME_CXX_MPI = sionmpife_cxx_$(BGPREC)

PYTHONENABLE    = 0

SION_DEBUG       = 


#------------------------------------------------------------------------------
# MPI Settings
#------------------------------------------------------------------------------

MPIENABLE = 0

#------------------------------------------------------------------------------
# OpenMP Settings
#------------------------------------------------------------------------------

OMPENABLE = 0

#------------------------------------------------------------------------------
# Hybrid MPI/OpenMP Settings
#------------------------------------------------------------------------------

HYBENABLE  = 0


#------------------------------------------------------------------------------
# Compression Support
#------------------------------------------------------------------------------

SZLIB          = szlib
SZLIB_OPTFLAGS = -O3
SZLIB_CFLAGS   = -I$(TOPDIR)/utils/szlib -DELG_COMPRESSED -DCUBE_COMPRESSED
SZLIB_LIBPATH  = -L$(TOPDIR)/utils/szlib
SZLIB_LIB      = -lsc.z

#------------------------------------------------------------------------------
# SIONlib HINTS library
#------------------------------------------------------------------------------
GPFS_HINTS_LIB  = -L/usr/lpp/mmfs/lib -lgpfs
GPFS_HINTS_INC  = -I/usr/lpp/mmfs/include
LINUX_HINTS_LIB = -L/usr/lib
LINUX_HINTS_INC = -I/usr/include

HINTSDEF=
HINTSINC=
HINTSLIB=


#------------------------------------------------------------------------------
# SIONlib Cache Settings
#------------------------------------------------------------------------------

CACHEFLAGS=
CACHELIB=
#CACHEFLAGS=-D_SION_CACHE
#CACHELIB=-lrt
