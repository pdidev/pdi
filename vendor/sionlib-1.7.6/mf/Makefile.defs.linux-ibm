#------------------------------------------------------------------------------
# SIONlib Makefile Definitions (Makefile.defs.linux-ibm)
#------------------------------------------------------------------------------

CFGKEY = linux-ibm
CONFIG = Linux cluster with IBM compilers and MPICH mpi

#------------------------------------------------------------------------------
# Platform Settings
#------------------------------------------------------------------------------
PREC   = 32
PFLAG  = -q$(PREC)
AFLAG  =

PREFIX = $(TOPDIR)/../../install/sionlib_linux_ibm

PLAT     = linux
#PLAT_LDIR   = -DPFORM_LDIR=\"/tmp\"
MACHINE  = -DMACHINE=\"Linux\ IBM\ PowerPC\"
PLAT_CONF= $(MACHINE) $(PLAT_LDIR)
PLATCC   = mpixlc -q$(PREC)

OPTFLAGS = -g
CC       = xlc
CFLAGS   = -qlanglvl=stdc99 $(PFLAG) $(OPTFLAGS)
CXX      = xlC
CXXFLAGS = $(PFLAG) $(OPTFLAGS)
F77      = xlf #-qsuppress=cmpmsg
F90      = xlf90 -qfree=f90 -qsuffix=f=f90 #-qsuppress=cmpmsg
FFLAGS   = $(PFLAG) $(OPTFLAGS)
FPP      = -qsuffix=cpp=F90
FDOPT    = -WF,-D
LDFLAGS  = $(PFLAG) $(OPTFLAGS)
UTILLIB  =

#------------------------------------------------------------------------------
# SIONlib Settings
#------------------------------------------------------------------------------
SION_PLATFORM    = -D_SION_LINUX
SION_MSA         =

SION_LIBNAME_COM = sioncom_$(PREC)
SION_LIBNAME_SER = sionser_$(PREC)
SION_LIBNAME_GEN = siongen_$(PREC)
SION_LIBNAME_OMP     = sionomp_$(PREC)
SION_LIBNAME_MPI     = sionmpi_$(PREC)
SION_LIBNAME_OMPI    = sionompi_$(PREC)

PARUTILENABLE    = 1

FORTRANENABLE    = 1
FORTRANNAMES     = -D_FORTRANNOUNDERSCORE
SION_LIBNAME_F77_SER = sionser_f77_$(PREC)
SION_LIBNAME_F77_MPI = sionmpi_f77_$(PREC)
SION_LIBNAME_F90_SER = sionser_f90_$(PREC)
SION_LIBNAME_F90_MPI = sionmpi_f90_$(PREC)
SION_MODPATH = mod_$(PREC)

CXXENABLE            = 1
SION_LIBNAME_CXX_SER = sionser_cxx_$(PREC)
SION_LIBNAME_CXX_MPI = sionmpi_cxx_$(PREC)

PYTHONENABLE    = 0

ARCH             = LINUX
SION_DEBUG       = 

COVERAGE         =

#------------------------------------------------------------------------------
# MPI Settings
#------------------------------------------------------------------------------

MPIENABLE = 1
MPICC     = mpixlc -cc="$(CC)"
MPICXX    = mpixlc++x -CC="$(CXX)"
MPIF90    = mpixlf90 -f90="$(F90)"
MPILIB    = 
PMPILIB   = 
FMPILIB   = 
FMPIOBJ   =
MPI_CONFIG_TARGETS  = 

#------------------------------------------------------------------------------
# OpenMP Settings
#------------------------------------------------------------------------------

OMPENABLE  = 1
OMPCC      = xlc_r
OMPCXX     = xlC_r
OMPF90     = xlf90_r -qsuffix=f=f90 -qfree=f90 #-qsuppress=cmpmsg
OMPFLAG    = -qsmp=omp
OMPELGLIB  = libelg.omp.a

#------------------------------------------------------------------------------
# Hybrid MPI/OpenMP Settings
#------------------------------------------------------------------------------

HYBENABLE  = 1
HYBCC      = mpixlc -cc="$(OMPCC)" -D_THREAD_SAFE
HYBCXX     = mpixlc++ -cc="$(OMPCXX)" -D_THREAD_SAFE
HYBF90     = mpixlf90 -f90="$(OMPF90)"
HYBFLAG    = $(OMPFLAG)

#------------------------------------------------------------------------------
# Compression Support
#------------------------------------------------------------------------------

SZLIB          = szlib
SZLIB_OPTFLAGS = -O3
SZLIB_CFLAGS   = -I$(TOPDIR)/utils/szlib -DELG_COMPRESSED -DCUBE_COMPRESSED
SZLIB_LIBPATH  = -L$(TOPDIR)/utils/szlib
SZLIB_LIB      = -lsc.z


#------------------------------------------------------------------------------
# SIONlib Cache Settings
#------------------------------------------------------------------------------

CACHEFLAGS=
CACHELIB=
#CACHEFLAGS=-D_SION_CACHE
#CACHELIB=-lrt
