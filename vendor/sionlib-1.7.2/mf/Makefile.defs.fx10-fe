#------------------------------------------------------------------------------
# SIONlib Makefile Definitions (Makefile.defs.fx10-fe)
#------------------------------------------------------------------------------

CFGKEY = fx10
CONFIG = Fujitsu system (generic)

PREFIX = $(TOPDIR)/../../install/sionlib_fx10

#------------------------------------------------------------------------------
# Platform Settings
#------------------------------------------------------------------------------
PREC   = 64
PFLAG  =
AFLAG  =
PLAT     = generic
PLAT_LDIR   = -DPFORM_LDIR=\".\"
MACHINE  = -DMACHINE=\"Fujitsu\ FX10\"
PLAT_CONF= $(MACHINE) $(PLAT_LDIR)
PLATCC   = gcc
LARGEFILE =

#------------------------------------------------------------------------------
# SIONlib General Settings
#------------------------------------------------------------------------------
OPTFLAGS =
CC       = gcc
CFLAGS   = $(OPTFLAGS)
CXX      = g++
CXXFLAGS = $(OPTFLAGS)
F77      = gfortran
F90      = gfortran
FFLAGS   = $(OPTFLAGS)
FPP      =
FDOPT    = -D
LDFLAGS  = $(OPTFLAGS)
UTILLIB  =

#------------------------------------------------------------------------------
# SIONlib Settings
#------------------------------------------------------------------------------

SION_PLATFORM    = -D_SION_LINUX 
ARCH             = LINUX

# Library Naming Scheme: see Makefile.defs.linux-gomp
SION_LIBNAME_COM = sioncomfe_$(PREC)
SION_LIBNAME_SER = sionserfe_$(PREC)
SION_LIBNAME_GEN = siongenfe_$(PREC)
SION_LIBNAME_OMP     = sionompfe_$(PREC)
SION_LIBNAME_MPI     = sionmpife_$(PREC)
SION_LIBNAME_OMPI    = sionompife_$(PREC)

PARUTILENABLE    = 1

FORTRANENABLE    = 1
FORTRANNAMES     = -D_FORTRANUNDERSCORE
SION_LIBNAME_F77_SER = sionserfe_f77_$(PREC)
SION_LIBNAME_F77_MPI = sionmpife_f77_$(PREC)
SION_LIBNAME_F90_SER = sionserfe_f90_$(PREC)
SION_LIBNAME_F90_MPI = sionmpife_f90_$(PREC)
SION_MODPATH = modfe_$(PREC)

CXXENABLE            = 1
SION_LIBNAME_CXX_SER = sionserfe_cxx_$(PREC)
SION_LIBNAME_CXX_MPI = sionmpife_cxx_$(PREC)

PYTHONENABLE    = 0

SION_DEBUG       = 


#------------------------------------------------------------------------------
# MPI Settings
#------------------------------------------------------------------------------

MPIENABLE = 0

#------------------------------------------------------------------------------
# OpenMP Settings
#------------------------------------------------------------------------------

OMPENABLE  = 0

#------------------------------------------------------------------------------
# Hybrid MPI/OpenMP Settings
#------------------------------------------------------------------------------

HYBENABLE  = 0

#------------------------------------------------------------------------------
# Compression Support
#------------------------------------------------------------------------------

SZLIB          = szlib
SZLIB_OPTFLAGS = -O3
SZLIB_CFLAGS   = -I$(TOPDIR)/utils/szlib -DELG_COMPRESSED -DCUBE_COMPRESSED
SZLIB_LIBPATH  = -L$(TOPDIR)/utils/szlib
SZLIB_LIB      = -lsc.z

#------------------------------------------------------------------------------
# SIONlib HINTS library
#------------------------------------------------------------------------------
GPFS_HINTS_LIB  = -L/usr/lpp/mmfs/lib -lgpfs
GPFS_HINTS_INC  = -I/usr/lpp/mmfs/include
LINUX_HINTS_LIB = -L/usr/lib
LINUX_HINTS_INC = -I/usr/include

HINTSDEF=
HINTSINC=
HINTSLIB=


#------------------------------------------------------------------------------
# SIONlib Cache Settings
#------------------------------------------------------------------------------

CACHEFLAGS=
CACHELIB=
#CACHEFLAGS=-D_SION_CACHE
#CACHELIB=-lrt
