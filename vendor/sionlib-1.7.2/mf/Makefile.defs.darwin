#------------------------------------------------------------------------------
# SIONlib Makefile Definitions (Makefile.defs.darwin)
#------------------------------------------------------------------------------

CFGKEY = darwin
CONFIG = 
MPITESTRUN = mpiexec -np 4
#------------------------------------------------------------------------------
# Platform Settings
#------------------------------------------------------------------------------
PREC   = 64
PFLAG  = -m$(PREC)
AFLAG  =

PLAT     = linux
MACHINE  = -DMACHINE=\"Linux\ Cluster\"
#PLAT_LDIR= -DPFORM_LDIR=\"/tmp\"
PLATCC   = gcc $(PFLAG)
PLAT_CONF= $(MACHINE) $(PLAT_LDIR)
PLATCC   = mpicc


#------------------------------------------------------------------------------
# SIONlib General Settings
#------------------------------------------------------------------------------
OPTFLAGS = -g -O0 -Wall
CC       = gcc
CFLAGS   = -std=c99 $(PFLAG) $(OPTFLAGS)
CXX      = g++
CXXFLAGS = $(PFLAG) $(OPTFLAGS) -O3
F77      = gfortran
F90      = $(F77)
FFLAGS   = $(PFLAG) $(OPTFLAGS) -ffree-form
FPP      =
FDOPT    = -D
LDFLAGS  = $(PFLAG) $(OPTFLAGS)
UTILLIB  =

#------------------------------------------------------------------------------
# SIONlib Settings
#------------------------------------------------------------------------------
PREFIX = $(TOPDIR)/../../install/sionlib_linux_gomp
SION_PLATFORM    = -D_SION_DARWIN 
ARCH             = LINUX

SION_LIBNAME_COM = sioncom_$(PREC)
SION_LIBNAME_SER = sionser_$(PREC)
SION_LIBNAME_GEN = siongen_$(PREC)
SION_LIBNAME_OMP     = sionomp_$(PREC)
SION_LIBNAME_MPI     = sionmpi_$(PREC)
SION_LIBNAME_OMPI    = sionompi_$(PREC)

PARUTILENABLE    = 1

FORTRANENABLE    = 0
FORTRANNAMES     = -D_FORTRANUNDERSCORE
SION_LIBNAME_F77_SER = sionser_f77_$(PREC)
SION_LIBNAME_F77_MPI = sionmpi_f77_$(PREC)
SION_LIBNAME_F90_SER = sionser_f90_$(PREC)
SION_LIBNAME_F90_MPI = sionmpi_f90_$(PREC)
SION_MODPATH = mod_$(PREC)

CXXENABLE            = 0
SION_LIBNAME_CXX_SER = sionser_cxx_$(PREC)
SION_LIBNAME_CXX_MPI = sionmpi_cxx_$(PREC)

PYTHONENABLE    = 0

SION_DEBUG       = 

#------------------------------------------------------------------------------
# MPI Settings
#------------------------------------------------------------------------------

MPIENABLE = 1
MPICC     = mpicc
MPICXX    = mpicxx
MPIF90    = mpif90
MPILIB    = 
PMPILIB   = -lpmpich
#PMPILIB   = # MPICH2
FMPILIB   = -lfmpich
FMPIOBJ   =

MPI_CONFIG_TARGETS  = 

#------------------------------------------------------------------------------
# OpenMP Settings
#------------------------------------------------------------------------------

OMPENABLE  = 0
OMPCC      = $(CC)
OMPCXX     = $(CXX)
OMPF90     = $(F90)
OMPFLAG    = -fopenmp

#------------------------------------------------------------------------------
# Hybrid MPI/OpenMP Settings
#------------------------------------------------------------------------------

HYBENABLE = 0
HYBCC      = $(MPICC)
HYBCXX     = $(MPICXX)
HYBF90     = $(MPIF90)
HYBFLAG    = $(OMPFLAG)


#------------------------------------------------------------------------------
# Compression Support
#------------------------------------------------------------------------------

SZLIB          = szlib
SZLIB_OPTFLAGS = -O3
SZLIB_CFLAGS   = -I$(TOPDIR)/utils/szlib -DELG_COMPRESSED -DCUBE_COMPRESSED
SZLIB_LIBPATH  = -L$(TOPDIR)/utils/szlib
SZLIB_LIB      = -lsc.z

#------------------------------------------------------------------------------
# GNU Make Support
#-----------------------------------------------------------------------------

MAKE = gnumake

#------------------------------------------------------------------------------
# SIONlib Cache Settings
#------------------------------------------------------------------------------

CACHEFLAGS=
CACHELIB=
#CACHEFLAGS=-D_SION_CACHE
#CACHELIB=-lrt
