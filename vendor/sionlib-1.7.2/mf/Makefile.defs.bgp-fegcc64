#------------------------------------------------------------------------------
# SIONlib Makefile Definitions (Makefile.defs.bgp-fegcc)
#------------------------------------------------------------------------------

CFGKEY = bgp
CONFIG = IBM BlueGene/P

PREFIX = $(TOPDIR)/../../install/sionlib_bgp

#------------------------------------------------------------------------------
# Platform Settings
#------------------------------------------------------------------------------
PREC   = 64
PFLAG  =
AFLAG  =

PLAT     = generic
MACHINE  = -DMACHINE=\"IBM\ BG/P\"
PLAT_LDIR   = -DPFORM_LDIR=\".\"
PLAT_CONF= $(MACHINE) $(PLAT_LDIR)
PLATCC   = gcc -m$(PREC)

LARGEFILE=-D_LARGEFILE64_SOURCE -D_FILE_OFFSET_BITS=64 -D__USE_LARGEFILE64 -D__USE_FILE_OFFSET64

#------------------------------------------------------------------------------
# SIONlib General Settings
#------------------------------------------------------------------------------
OPTFLAGS = -g
CC       = gcc -m$(PREC)
CFLAGS   = $(OPTFLAGS) $(LARGEFILE)
CXX      = g++ -m$(PREC)
CXXFLAGS = $(OPTFLAGS) -O3 $(LARGEFILE)
F77      = gfortran -m$(PREC)
F90      = gfortran -m$(PREC)
FFLAGS   = $(OPTFLAGS) 
FPP      =
FDOPT    = -WF,-D
LDFLAGS  = $(OPTFLAGS) 
UTILLIB  =

#------------------------------------------------------------------------------
# SIONlib Settings
#------------------------------------------------------------------------------

SION_PLATFORM    = -D_SION_LINUX 
ARCH             = LINUX

# Library Naming Scheme: see Makefile.defs.linux-gomp
SION_LIBNAME_COM = sioncomfegcc_$(PREC)
SION_LIBNAME_SER = sionserfegcc_$(PREC)
SION_LIBNAME_GEN = siongenfegcc_$(PREC)
SION_LIBNAME_OMP     = sionompfegcc_$(PREC)
SION_LIBNAME_MPI     = sionmpifegcc_$(PREC)
SION_LIBNAME_OMPI    = sionompifegcc_$(PREC)

PARUTILENABLE    = 1

FORTRANENABLE    = 1
FORTRANNAMES     = -D_FORTRANUNDERSCORE
SION_LIBNAME_F77_SER = sionserfegcc_f77_$(PREC)
SION_LIBNAME_F77_MPI = sionmpifegcc_f77_$(PREC)
SION_LIBNAME_F90_SER = sionserfegcc_f90_$(PREC)
SION_LIBNAME_F90_MPI = sionmpifegcc_f90_$(PREC)
SION_MODPATH = modfegcc_$(PREC)

CXXENABLE            = 0
SION_LIBNAME_CXX_SER = sionserfegcc_cxx_$(PREC)
SION_LIBNAME_CXX_MPI = sionmpifegcc_cxx_$(PREC)

PYTHONENABLE    = 0

SION_DEBUG       = 

#------------------------------------------------------------------------------
# Compression Support
#------------------------------------------------------------------------------

SZLIB          = szlib
SZLIB_OPTFLAGS = -O3
SZLIB_CFLAGS   = -I$(TOPDIR)/utils/szlib -DELG_COMPRESSED -DCUBE_COMPRESSED
SZLIB_LIBPATH  = -L$(TOPDIR)/utils/szlib
SZLIB_LIB      = -lsc.z

#------------------------------------------------------------------------------
# MPI Settings
#------------------------------------------------------------------------------

MPIENABLE = 0

#------------------------------------------------------------------------------
# OpenMP Settings
#------------------------------------------------------------------------------

OMPENABLE = 0

#------------------------------------------------------------------------------
# Hybrid MPI/OpenMP Settings
#------------------------------------------------------------------------------

HYBENABLE  = 0


#------------------------------------------------------------------------------
# SIONlib Cache Settings
#------------------------------------------------------------------------------

CACHEFLAGS=
CACHELIB=
#CACHEFLAGS=-D_SION_CACHE
#CACHELIB=-lrt
