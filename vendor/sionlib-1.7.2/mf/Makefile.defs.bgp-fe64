#------------------------------------------------------------------------------
# SIONlib Makefile Definitions (Makefile.defs.bgp-fe)
#------------------------------------------------------------------------------

CFGKEY = bgp
CONFIG = IBM BlueGene/P

PREFIX = $(TOPDIR)/../../install/sionlib_bgp

#------------------------------------------------------------------------------
# Platform Settings
#------------------------------------------------------------------------------
PREC   = 64
PFLAG  =
AFLAG  =
PLAT     = generic
MACHINE  = -DMACHINE=\"IBM\ BG/P\"
PLAT_LDIR   = -DPFORM_LDIR=\".\"
PLAT_CONF= $(MACHINE) $(PLAT_LDIR)
PLATCC   = gcc -m$(PREC)

LARGEFILE=-D_LARGEFILE64_SOURCE -D_FILE_OFFSET_BITS=64 -D__USE_LARGEFILE64 -D__USE_FILE_OFFSET64

#------------------------------------------------------------------------------
# SIONlib General Settings
#------------------------------------------------------------------------------
OPTFLAGS = -g -qfullpath
CC       = xlc -q$(PREC)
CFLAGS   = $(OPTFLAGS) $(LARGEFILE) -qsuppress=1506-377
CXX      = xlC -q$(PREC)
CXXFLAGS = $(OPTFLAGS) -O3 $(LARGEFILE)
F77      = xlf -q$(PREC)
F90      = xlf -q$(PREC)
FFLAGS   = $(OPTFLAGS) 
FPP      =
FDOPT    = -WF,-D
LDFLAGS  = $(OPTFLAGS) 
UTILLIB  =

#------------------------------------------------------------------------------
# SIONlib Settings
#------------------------------------------------------------------------------

SION_PLATFORM    = -D_SION_LINUX 
ARCH             = LINUX

# Library Naming Scheme: see Makefile.defs.linux-gomp
SION_LIBNAME_COM = sioncomfe_$(PREC)
SION_LIBNAME_SER = sionserfe_$(PREC)
SION_LIBNAME_GEN = siongenfe_$(PREC)
SION_LIBNAME_OMP     = sionompfe_$(PREC)
SION_LIBNAME_MPI     = sionmpife_$(PREC)
SION_LIBNAME_OMPI    = sionompife_$(PREC)

PARUTILENABLE    = 1

FORTRANENABLE    = 1
FORTRANNAMES     = -D_FORTRANNOUNDERSCORE
SION_LIBNAME_F77_SER = sionserfe_f77_$(PREC)
SION_LIBNAME_F77_MPI = sionmpife_f77_$(PREC)
SION_LIBNAME_F90_SER = sionserfe_f90_$(PREC)
SION_LIBNAME_F90_MPI = sionmpife_f90_$(PREC)
SION_MODPATH = modfe_$(PREC)

CXXENABLE            = 0
SION_LIBNAME_CXX_SER = sionserfe_cxx_$(PREC)
SION_LIBNAME_CXX_MPI = sionmpife_cxx_$(PREC)

PYTHONENABLE    = 0

SION_DEBUG       = 





#------------------------------------------------------------------------------
# Compression Support
#------------------------------------------------------------------------------

SZLIB          = szlib
SZLIB_OPTFLAGS = -O3
SZLIB_CFLAGS   = -I$(TOPDIR)/utils/szlib -DELG_COMPRESSED -DCUBE_COMPRESSED
SZLIB_LIBPATH  = -L$(TOPDIR)/utils/szlib
SZLIB_LIB      = -lsc.z

#------------------------------------------------------------------------------
# MPI Settings
#------------------------------------------------------------------------------

MPIENABLE = 0

#------------------------------------------------------------------------------
# OpenMP Settings
#------------------------------------------------------------------------------

OMPENABLE = 0

#------------------------------------------------------------------------------
# Hybrid MPI/OpenMP Settings
#------------------------------------------------------------------------------

HYBENABLE  = 0


#------------------------------------------------------------------------------
# SIONlib Cache Settings
#------------------------------------------------------------------------------

CACHEFLAGS=
CACHELIB=
#CACHEFLAGS=-D_SION_CACHE
#CACHELIB=-lrt
